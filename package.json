{
  "name": "spawnmon",
  "version": "0.0.1",
  "description": "Utility for running concurrent child processes during development.",
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "bin": {
    "spawnmon": "bin/cli",
    "sp": "bin/cli"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "docs": "typedoc ./src --options ./typedoc.json  && touch ./docs/.nojekyll",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist",
    "docs",
    "CHANGE.md",
    "README.md"
  ],
  "keywords": [
    "concurrently",
    "concurrent",
    "parallel",
    "shell",
    "command",
    "cli",
    "npm",
    "task",
    "script",
    "scripts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "cli-table3": "^0.6.0",
    "cross-spawn": "^7.0.3",
    "log-symbols": "^4.1.0",
    "minimist": "^1.2.5",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.7",
    "string-length": "^4.0.2",
    "strip-ansi": "^6.0.0",
    "supports-color": "^8.1.1",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@types/cross-spawn": "^6.0.2",
    "@types/minimist": "^1.2.1",
    "@types/node": "^12.0.0",
    "@types/supports-color": "^8.1.0",
    "@types/wrap-ansi": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
    "rollup": "^2.34.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3"
  }
}